@model ProductDto
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Product</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Id</lable>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["ProductId"]">
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Name</lable>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Brand</lable>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Brand">
					<span asp-validation-for="Brand" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Category</lable>
				<div class="col-sm-8">
					<select class="form-select" asp-for="Category">
						<option value='Other'>Other</option>
						<option value='Story'>Story</option>
						<option value='Novel'>Novel</option>
						<option value='Translation'>Translation</option>
					</select>
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Price</lable>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Price">
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Description</lable>
				<div class="col-sm-8">
					<textarea class="form-control" asp-for="Descrption"></textarea>
					<span asp-validation-for="Descrption" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<img src="/bookImages/@ViewData["ImageFileName"]"
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Image</lable>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ImageFile">
					<span asp-validation-for="ImageFile" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<lable class="col-sm-4 col-form-lable">Created At</lable>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]">
				</div>
			</div>
			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Book" asp-action="Index" role="button">
						Cancel
					</a>
				</div>
			</div>
		</form>

	</div>


</div>
